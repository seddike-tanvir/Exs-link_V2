{
  "hosting": {
    "site": "exs-link",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      { "source": "/:code", "destination": "/redirect/index.html" },
      { "source": "**", "destination": "/404.html" }
    ]
  }
}
